{
  "engines": {
    "yarn": "^1.0.0"
  },
  "name": "react-demos",
  "version": "1.0.0",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "lerna run build",
    "postinstall": "npm run -s build",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,css,json,md}\" \"**/.*rc\"",
    "predeploy": "npm run -s build",
    "deploy": "node deploy.js",
    "precommit": "lint-staged"
  },
  "author": "dgeibi",
  "license": "MIT",
  "description": "some react demos",
  "dependencies": {
    "eslint": "^4.16.0",
    "eslint-config-dgeibi": "^4.1.0",
    "fs-extra": "^5.0.0",
    "lerna": "2.8.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.10.2",
    "glob": "^7.1.2",
    "lint-staged": "^6.0.1",
    "husky": "^0.14.3",
    "gh-pages": "^1.1.0"
  },
  "lint-staged": {
    "*.js": ["prettier --write", "eslint", "git add"],
    "*.{css,json,md}": ["prettier --write", "git add"],
    ".*rc": ["prettier --write", "git add"]
  }
}
